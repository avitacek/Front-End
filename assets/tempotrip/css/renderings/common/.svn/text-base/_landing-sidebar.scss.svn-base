@import "../../globals/variables";
@import "../../globals/mixins";
/* -----------------------------------------------------
	landing-side
-------------------------------------------------------*/
#landing-sidebar{
	padding:15% 5%;
	height:100%;
	background: rgb(45,45,42);
	background: -moz-linear-gradient(top, rgba(45,45,42,1) 0%, rgba(45,45,42,1) 100%);
	background: -webkit-linear-gradient(top, rgba(45,45,42,1) 0%,rgba(45,45,42,1) 100%);
	background: linear-gradient(to bottom, rgba(45,45,42,1) 0%,rgba(45,45,42,1) 100%);
	filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#e3f2f7', endColorstr='#5e93a5',GradientType=0 );
	& p{
		font-size:16px;
		color:$beige;
	}
}
@import "mobile/landing-sidebar-mobile";