@import "../../globals/variables";
@import "../../globals/mixins";
/* -----------------------------------------------------
	alltrips page
-------------------------------------------------------*/
#all-travellers-page{
	padding:0px;
	& .body-content{
		& .col-sm-8, & .col-sm-4{
			#allTravellers_wrapper{
				background-color: rgba(255,255,255,0.45);
    			border: 1px solid #ffffff;
    			border-radius:3px;
    			padding:15px 0px;
    			& .dataTables_length{
    				& select{
    					margin:0px 5px !important;
    				}
    			}
    			& .dataTables_filter{
    				
    			}
			}
			& table.dataTable{
				box-shadow: 0 1px 2px rgba(0, 0, 0, 0.05), 0 0 0 1px rgba(63, 63, 68, 0.1);
			}
			& table.dataTable tbody tr.selected{
				background-color:#eceff1;
				border-radius:3px;
			}
			& .table-bordered > thead > tr > th, .table-bordered > thead > tr > td, .table-bordered > tbody > tr > th, .table-bordered > tbody > tr > td, .table-bordered > tfoot > tr > th, .table-bordered > tfoot > tr > td{
				border:0px solid #dddddd;
			}
			& table.dataTable tbody th, table.dataTable tbody td{
				padding:15px 10px;
			}
			table.dataTable.no-footer{
				border:1px solid transparent
			}
			table.dataTable thead tr{
				color:#ffffff;
				background-color: #006e8d;
			}
			.dataTables_wrapper .dataTables_paginate .paginate_button:active{
				background:none;
				box-shadow:none;
			}
			div.dataTables_wrapper div.dataTables_info{
				padding:8px 10px;
			}
			& #allTravellers_wrapper .row:last-child .col-sm-5, & #allTravellers_wrapper .row:last-child .col-sm-7{
				width:100%;
				float:left;
			}
			#allTrips-page .body-content .col-sm-8 .table > thead > tr > th:focus{
				outline: transparent auto 5px;
			}
			& #allTravellers_wrapper .row:last-child .col-sm-7 .dataTables_paginate{
				width:100%;
				& ul{
					width:100%;
					display:table;
					& li{
						display:table-cell;
					}
				}
			}
			& .dataTables_wrapper .dataTables_paginate .paginate_button:hover{
				border: 1px solid transparent;
				background-color: transparent;
				background:transparent;
			}
			& .pagination > .active > a, .pagination > .active > a:hover, .pagination > .active > a:focus, .pagination > .active > span, .pagination > .active > span:hover, .pagination > .active > span:focus{
				background-color: #006e8d;
				border-color:#006e8d;
			}
		}
		& .col-sm-4{
			& .wrapper{
				background-color: transparent;
			}
			& .card-traveller{
				background-color: rgba(255, 255, 255, 0.45);
    			border: 1px solid #ffffff;
    			border-radius: 3px;
    			padding: .9375rem;
    			box-shadow: 0 0px 0px rgba(0, 0, 0, 0.0), 0 0 0 0px rgba(0, 0, 0, 0.0);
				& .content{
					padding:.9375em;
					background: #ffffff;
					box-shadow: 0 1px 2px rgba(0, 0, 0, 0.05), 0 0 0 1px rgba(63, 63, 68, 0.1);
					& .row{
						& p{text-align:left;}
						& .col-sm-12{padding:0px;}
						& .card-title{
							font-family: "Marvel-Medium", Helvetica, Arial, sans-serif;
						    font-size: 24px;
						    font-weight: bold;
						    line-height: 1.25;
						    letter-spacing: 0.5px;
						    color: #333333;
							margin-bottom:0px;
							text-align:left;
						}
						& .status{
							margin:5px 0px;
							& span{
								color:#5DB9BE;
								&.inactive{
									color:red;
								}
							}
						}
						& .costs{
							& .card-costs{
								text-align:left;
								font-family: "Marvel-Medium", Helvetica, Arial, sans-serif;
							    font-size: 24px;
							    font-weight: bold;
							    line-height: 1.25;
							    letter-spacing: 0.5px;
							    color: #333333;
							    &.alert{
									color:red;
								}
							}
						}
						& #deptHeader, & #arrvHeader{
						margin-bottom:0px;
						padding:15px;
							& .card-title{
								margin-top:0px;
								margin-bottom:0px;
								font-weight:normal;
								font-size:32px;
							}
							& .CityCountry{
								font-size:10px;
								width:auto;
								padding:0px;
								margin:0px;
							}
						}
						& #arrvHeader{
							border-left:1px solid #ddd;
						}
						&:last-child{
							& ul{
								border-bottom:none;
								& li{
									padding:15px;
								}
							}
						}
						.quick-facts-box {
						    min-height: 70px;
						    margin: 1.5rem 0px;
						    text-align: center;
						    background: #fff;
						    border: none;
						    & ul{
						    	border: 1px solid #cfd8dc;
						    	& li{
						    		font-size:12px;
						    		& span{
						    			font-size:10px;
						    			color:#54565b;
						    		}
						    	}
						    }
						}
				
					}
					& #departureDetails{
						& .col-sm-12{
							padding:0px;
							& #itinerary-accordian{
								& .item{
									& a{
										padding:15px;
										display:block;
										width:100%;
										background-color: #eceff1;
										border-top:1px solid #a5aab2;
										border-bottom:1px solid #a5aab2
									}
									& #departure-travel, & #return-travel{
										background-color: #ffffff;
										& .list-group{
											margin-bottom:0px;
										}
										& .departureDetails{
											& ul{
												width:100%;
												display:table;
												margin:0px;
												padding:0px;
												list-style-type: none;
												font-size:10px;
												border-bottom:1px solid #a5aab2;
												& li{
													display:table-cell;
													padding:5px;
													text-align:center;
													border-right:1px solid #a5aab2;
													&:last-child{
														border-right:0px solid #a5aab2;
													}
													& p{
														margin-top:10px;
													}
												}
											}
										}
										& .departureTime{
											& ul{
												width:100%;
												display:block;
												margin:0px;
												padding:0px;
												list-style-type: none;
												font-size:10px;
												border-bottom:none;
												& li{
													display:block;
													padding:0px;
														& ul{
														width:100%;
														display:table;
														margin:0px;
														padding:0px;
														list-style-type: none;
														font-size:10px;
														& li{
															display:table-cell;
															padding:5px;
															text-align:center;
															font-family: "Marvel-Regular", Helvetica, Arial, sans-serif;
    														font-size: 14px;
    														color: #54565b;
															& p{
																margin-top:10px;
															}
														}
													}
													&.arrive{
														& ul{
															border-bottom:1px solid #a5aab2;
														}
													}

												}
											}
										}
									}
								}
							}
						}
					}
					& ul{
						width:100%;
						display:table;
						margin:0px;
						padding:0px;
						list-style-type: none;
						font-size:10px;
						border-bottom:1px solid #a5aab2;
						& li{
							display:table-cell;
							padding:5px;
							text-align:center;
							&:last-child{
								border-right:0px solid #a5aab2;
							}
							& p{
								margin-top:10px;
							}
							& a{
								font-size:12px;
							}
						}
					}
				}
			}
		}
	}
}
& #printdiv{
			background-color: #ffffff;
			height:auto;
			z-index: 9999;
			border:1px solid #a5aab2;
			display:none;
			width:950px;
			margin:0px auto;
			padding:15px;
			& #hidden_div{
			}
			& .print-wrapper{
				margin-left:0px;
				margin-right:0px;
				& .print-header{
					background-color: rgba(0,110,141,0.25);
					border-bottom:2px solid #006e8d;
					& .logo{
						width:auto;
						float:left;
						&:before{
							top:20%;
						}
					}
					& h1{
						float:right;
						color:#006e8d;
						padding-top:0px;
						text-transform: uppercase;
						font-weight:normal;
						font-size:32px;
						font-family:$Marvel-Regular;

					}
				}
				& .print-footer{
					background-color:#eceff1;
					border-top:2px solid #006e8d;
					& .logo{
						width:auto;
						float:right;
						padding-left:0px;
						padding-right:185px;
						&:before{
							top:20%;
						}
					}
					& h1{
						float:right;
						color:#006e8d;
						padding-top:0px;
						text-transform: uppercase;
						font-weight:normal;
						font-size:32px;
						font-family:$Marvel-Regular;

					}
				}
				& .departureHeader, & .returnHeader{
					background-color: #eceff1;
					margin-bottom:15px;
					& h3{
						margin-top:10px;
						color: #a5aab2;
						text-transform: uppercase;
						font-weight:normal;
						font-size:24px;
						font-family:$Marvel-Regular;
					}
				}
				& .traveller{
					margin-top:0px;
				}
				& .departureDetails, & .returnDetails{
					& .row{
						padding-bottom:15px;
					}
					& .col-sm-5{
						padding-left:0px;
						border-right:1px solid #a5aab2;
						& h5{
							color:#a5aab2;
							border-bottom:1px solid #a5aab2;
						}
						& h3{font-size:24px;}
						& .col-sm-6{
							padding-left:0px;
							padding-right:0px;
						}
					}
					& .col-sm-5:last-child{
						padding-right:0px;
						padding-left:15px;
						border-left:1px solid #a5aab2;
						border-right:0px solid #a5aab2;
					}
					& .col-sm-2{
						text-align:center;
						& h5{
							color:#a5aab2;
							border-bottom:1px solid #a5aab2;
							text-align:center;
						}
					}
					& .col-sm-12{
						padding-left:0px;
						padding-right:0px;
					}
					& h3, & h6{
						margin-top:0px;
						margin-bottom:0px;
					}
					& .flightTitles{
						margin-top:15px;
						padding-top:10px;
						padding-left:0px;
						padding-right:0px;
						border-top:1px solid #a5aab2;
						& .col-sm-4{
							padding-left:0px;
							margin-bottom:0px;
							color:#a5aab2;
						}
					}
					& .flightDetails{
						padding-top:0px;
						padding-left:0px;
						padding-right:0px;
						& .col-sm-4{
							padding-left:0px;
						}
					}
				}
			}
		}
@import "mobile/alltravellers-mobile";