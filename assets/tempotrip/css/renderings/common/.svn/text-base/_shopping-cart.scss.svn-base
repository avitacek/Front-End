@import "../../globals/variables";
@import "../../globals/mixins";
/* -----------------------------------------------------
	profile-side
-------------------------------------------------------*/
#shopping-cart-page{
	.image-bg{
		background:url('../images/az-2.jpg');
		& .color-overlay{
			        background-color: rgba(31, 39, 70, .55);
		}
	}
	& .header{
		& .row{
			max-width:1320px;
			margin:0px auto;
			padding-top:10px;
		    .col-sm-6, .footer-basic-centered .row .col-sm-6{
		            width: 50%;
		            padding: 0px;
		            margin: 0px;
		            float: left;
		    }
		    .col-sm-6 img{
		        width: 400px;
		        height: 71px;
		        margin: 0px auto;
		    }
		    .col-sm-6 ul{
		        float: right;
		        list-style-type: none;
		    }
		    .col-sm-6 ul li{
		            color: white;
		            width: auto;
		            padding: 15px 10px 0px;
		            text-align: center;
		            float: left;
		            line-height: 2.2em;
		            position: relative;
		    }
		    .col-sm-6 ul li a{
		            text-decoration: none;
		            text-transform: uppercase;
		            color: #ffffff;
		            font-weight: bold;
		            opacity: 1;
		    }
		    .col-sm-6 h1 {
		        float: left;
		        font-size:  28px; 
		        font-family: 'Open Sans', sans-serif;
		        font-weight: 300;
		        color: #5e5e5e;
		        line-height: 35px;
		        margin: 0;
		        width: 100%;
		    }
		    /*Heaer bootstrap drop menu customize*/
		    .dropdown .dropdown-menu{
		        left: auto;
		        right: 0px;
		        background-color: #1f2746;
		        border-radius: 0px;
		    }
		    .dropdown .dropdown-menu li{
		        padding: 0px;
		    }
		    .dropdown .dropdown-menu li a{
		        color: #ffffff;
		    }
		    .dropdown .dropdown-menu li a:hover, .dropdown .dropdown-menu li a:focus{
		        background-color: transparent;
		        color: #f6861f;
		    }
		}
	}
	& .body-content{
		& .row{
		    padding-top: 15px;
		    padding-bottom: 15px;
			border: 1px solid #ffffff;
			background: rgba(255,255,255,0.45);
			margin-bottom: 20px;
			&#tabs{
				width:100%;
				padding-left:15px;
				padding-right:15px;
				background: rgba(255,255,255,0.0);
				border: 0px solid #ffffff;
				padding-bottom: 0px;
				margin-bottom:0px;
				& .col-sm-12{
					background:url('../images/shopping-tabs.png')top left no-repeat;
					height:66px;
				}
			}
			&#shopping-bg{
				width:100%;
				padding-left:15px;
				padding-right:15px;
				& .col-sm-12{
					background:url('../images/orderDetails.png')top left no-repeat;
					background-size: 100% auto;
					height:585px;
				}
			}
			&#customFields{
				width:100%;
				padding-left:15px;
				padding-right:15px;
				& .col-sm-12{
					background:url('../images/customField.png')top left no-repeat;
					height:221px;
				}
			}
			&#paymentDetails{
				width:100%;
				padding-left:15px;
				padding-right:15px;
				& .col-sm-12{
					background:url('../images/payment-details.png')top left no-repeat;
					background-size: 100% auto;
					height:564px;
				}
				& #submitpayment{
					background:none;
					height:42px;
					padding-left:0px;
					padding-right:0px;
					& a{
						width:100%;
						height:42px;
						padding:12px;
						text-transform:uppercase;
						color:#ffffff;
						background:#f6861f;
						display:block;
						text-align:center;
					}
				}
			}
			#shopping-cart, #traveler-pref{
				position: relative;
    			padding-left:0rem;
    			padding-right:0rem;
    			float: left;
    			& .content-wrapper .content-outer .label{
    				padding:0em !important;
    				background: #f6861f;
    				display:block;
    				& a.add_field_button {
					    border-radius: 50%;
					    width: 20px;
					    height: 20px;
					    padding: 2px 5px;
					    display: inline-block;
					    border: 1px solid #ffffff;
					    position: absolute;
					    right:-10px;
					    top:7px;
					    margin: 0px 20px;
					    color: #ffffff;
					}
    			}
    			& .content-wrapper .content-outer .label p {
				    text-align: left;
				    padding: 5px;
				    font-size: 16px;
				    font-weight: 700;
				    margin: 0;
				    color: #ffffff;
				    width:50%;
				    
				}
				& .content-wrapper .content-inner .sublabel a.remove_field {
					    border-radius: 50%;
					    width: 20px;
					    height: 20px;
					    padding: 0 .25em;
					    display: inline-block;
					    border: 1px solid #ffffff;
					    position: relative;
					    margin: 10px 20px;
					    color: #ffffff;
					    float:right
				}
				& .content-wrapper .content-inner .sublabel{
					height:42px;
				}
				& .content-wrapper .content-inner .sublabel select{
							margin-top:7px;
							margin-right:12px;
							border: 1px solid #ccc;
							background-color: #FFF;
    						margin-bottom: 10px;
    						border-radius:0px;
    						height:30px;
    						float:right;
    						width:150px;
				}
				& .content-wrapper .content-outer select{
					margin-top:10px;
					border: 1px solid #ccc;
					background-color: #FFF;
					margin-bottom: 10px;
					border-radius:0px;
					height:42px;
				}
				& .content-wrapper .content-outer .content-inner {
				    padding: 10px 10px;
				    & .sublabel {
					    width: 100%;
					    background: #1a4666;
					    border-radius: 0px;
					    & p {
						    padding: 8px 12px;
						    display: inline-block;
						    font-weight: 700;
						    color: #FFF;
						    margin-bottom:0px;
						}
					}
					& .form-group {
					    padding: 35px 10px 0;
					    position: relative;
					    border: 1px solid #ddd;
					    margin-bottom: 10px;
					    margin-top: 0px;
					    background: #F7F7F7;
					    & .form-label {
						    position: absolute;
						    top: 0;
						    left: 0;
						    width: 100%;
						    background: rgba(26, 70, 102, 0.45);
						    margin-bottom: 10px;
						    font-size: 12px;
						    padding: 8px 12px;
						    color: #ffffff;
						    font-weight: bold;
						    text-transform:uppercase;
						}
						& label{
							    width: 100%;
							    padding: 2px 6px 1px;
							    font-size: 14px;
							    text-transform: uppercase;
							    color: #333333;
							    cursor: inherit;
							    font-weight: bold;
							    margin-top: 10px;
							    margin-bottom:10px;
						}
						& .form-group .columns {
						    padding-left: 3px;
						    padding-right: 3px;
						}
						& input[type="text"], input[type="password"], input[type="date"], input[type="datetime"], input[type="datetime-local"], input[type="month"], input[type="week"], input[type="email"], input[type="number"], input[type="search"], input[type="tel"], input[type="time"], input[type="url"], input[type="color"], textarea {
						    -webkit-appearance: none;
						    -moz-appearance: none;
						    display: block;
						    width: 100%;
						    height:42px;
						    padding: 0.5rem;
						    margin: 0 0 1rem 0;
						    border: 1px solid #ccc;
						    border-radius: 3px;
						    background: #fff;
						    color: #000;
						    font-size: 16px;
						    line-height: 1;
						    -webkit-font-smoothing: antialiased;
						}
						& select{
							margin-top:10px;
							border: 1px solid #ccc;
							background-color: #FFF;
    						margin-bottom: 10px;
    						border-radius:0px;
    						height:42px;
						}
					}
					& .row {
				    	width: auto;
				    	margin: 0 -.9375rem;
				    	max-width: none;
				    	border:none;
				    	&#flyer-pref{
				    		& select{
				    			margin-top:0px;
				    		}
				    	}
					}
				}
				& .submit-payment{
					width:100%;
					height:42px;
					padding:12px;
					text-transform:uppercase;
					color:#ffffff;
					background:#f6861f;
					display:block;
					text-align:center;
				}
			}
		}
	}
}
@import "mobile/shopping-cart-mobile";