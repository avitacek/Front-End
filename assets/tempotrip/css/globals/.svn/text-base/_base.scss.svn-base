/* -----------------------------------------------------------------------------
Import BASE
----------------------------------------------------------------------------- */
@import "variables";
@import "mixins";


body {
    background-color:#eff3f6;
    overflow-x: hidden;
    font-family:$Marvel-Regular;
}
p, ul { 
	font-family:$Marvel-Regular;
	font-style: normal;
	font-stretch: normal;
	line-height:inherit;
	letter-spacing:inherit;
	letter-spacing: 1.2px;
    line-height: 1.5em;
	
}
.logo{
	font-family:$Marvel-Regular;
	color:$blue;
	font-size:5em;
	letter-spacing:3px;
	height:85px;
	display:block;
	position:relative;
	padding-left:130px;
	width:100%;
	& span{ 
		font-family:$Marvel-Bold;
		color:$blue-5;
}
	&::before{
		content:'';
		width:185px;
		height:55px;
		position:absolute;
		top:40%;
		left:0px;
		background:url('../images/global/TEMPO-logo.svg') center center no-repeat;
		background-size:100% auto;
	}
}
& .modal{
		& .modal-box{
			position:relative;
			padding:2% 5%;
			margin:10% auto;
			background:#ffffff;
			border-radius:3px;
			border:1px solid #e3e3e3;
			box-shadow: none;
			display:block;
			width:40%;
			height:auto;
			& .logo{
				width:58%;
				height:60px;
				font-size:3em;
				&::after{
					width:30px;
					height:30px;
					top:25%
				}
			}
		}
	}
.close-btn{
	width:30px;
	height:30px;
	border-radius:50%;
	background:#ffffff;
	border:1px solid #1a4666;
	position:absolute;
	color:#1a4666;
	top:-20px;
	right:-10px;
	padding:11px 10px;
	box-sizing:border-box;
	line-height:7px;
	cursor:pointer;
	&:focus{
		outline:none;
	}
	&:hover{
		opacity:1;
	}
}
& input[type=text], & input[type=password], & input[type=email], input[type=select], input[type=radio],input[type=date], select{
    width: 100%;
    padding: 12px 20px;
    display: inline-block;
   	border: 1px solid #E3E3E3;
    color: #1a4666;
    box-sizing: border-box;
    border-radius:3px;
    letter-spacing: 1.2px;
    line-height: 1.5em;
    margin-bottom:10px!important;
    &::after{
    	content:'';
    	position:absolute;
    	top:0px;
    	right:0px;
    	display:none;
    }
    &:focus{
    	outline-color:#666666;
    	&:invalid{ /* when a field is considered invalid by the browser */
		    outline-color: #b03535;
		}
 
    }
}
& input[type=checkbox]{
    width: auto;
    padding: 12px 20px;
    margin: 8px 5px 0 0px;
    display: inline-block;
    border: 1px solid #ccc;
    box-sizing: border-box;
    &:focus{
    	outline-color:#666666;
    	&:invalid{ /* when a field is considered invalid by the browser */
		    outline-color: #b03535;
		}
 
    }
}
& select{
	margin:0px;
}
& button, & input[type=submit], & a#submit {
    background-color:#1a4666;
    text-align:center;
    color: white;
    padding: 14px 20px;
    margin: 8px 0;
    border: none;
    cursor: pointer;
    width: 100%;
    display:inline-block;
    border-radius:2px;
    letter-spacing: 1.2px;
    line-height: 1.5em;
    &:hover {
		opacity: 0.8;
	}
	&:focus{
		outline:white;
	}
}
.btn-primary{
	background-color: #5DB9BE;
	border-color:#5DB9BE;
	&:hover{
		background-color: #006E8D;
		border-color:#006E8D;
	}
}
/*Common Styles based on Style Guide*/
h1{
	font-family:$Marvel-Bold;
	font-size: 40px;
	font-weight: bold;
	line-height: 1.5;
	letter-spacing: 1.2px;
	color: $beige;
}
h2{
	font-family:$Marvel-Bold;
	font-size: 36px;
	font-weight: bold;
	line-height: 1.17;
	letter-spacing: 0.8px;
	color: $black;
}
h3{
	font-family:$Marvel-Medium;
	font-size: 32px;
	font-weight: 500;
	line-height: 1.25;
	letter-spacing: 0.2px;
	color: $black;

}
h4{
	font-family:$Marvel-Medium;
	font-size: 24px;
	font-weight: bold;
	line-height: 1.25;
	letter-spacing: 0.5px;
	color: $black;

}
h5{
	font-family:$Marvel-SemiBold;
	font-size: 18px;
	font-weight: 500;
	line-height: 1.56;
	letter-spacing: 0.2px;
	color: #1a4666;
}
p{
	font-family:$Marvel-Regular;
	font-size:14px;
	color:$slate-grey;
}
b, strong{
	font-family:$Marvel-Bold;
	font-weight:bold;
}
i{
	font-style:italic;
}

a {
	color:#1a4666;
	transition:all 0.25s 0s linear;
	letter-spacing: 1.2px;
    line-height: 1.5em;
    &:hover {
    	text-decoration:none;
    	color:$slate-grey;
        
    }
    &:visited {

    }
    &:focus {
		color:$blue;
		outline:none;
		text-decoration:none;
    }
}
a.disabled{
	&:hover{
		text-decoration:none !important;
	}
	&:visited {
		text-decoration:none;
    }
    
}
a.tertiary{
	color:$black;
	text-decoration:underline;
	&:hover{
		text-decoration:none !important;
	}
	&:visited {

    }
}
a.tertiary.disabled{
	color:$black;
	text-decoration:none !important;
	&:hover{
		text-decoration:none !important;
	}
	&:visited {

    }
}
a.btn, li a.btn{
	border:1px solid $black;
	border-radius:0px;
	color:$black;
	display:block;
	text-align:center;
	height:50px;
	width:200px;
	padding:20px 0px;
	font-family :$Marvel-Regular;
	font-size:14px;
	letter-spacing:1px;
	text-transform:uppercase;
	margin:10px 0px;
	&:hover{
		border:1px solid $skyblue;
		color:$skyblue;
		text-decoration:none!important;
	}
	&:visited{

	}


}
a.cta{
	border:1px solid $skyblue;
	background-color:transparent;
	color:$white;
	display:block;
	text-align:center;
	width:200px;
	height:50px;
	padding:20px 0px;
	margin:10px 0px;
	font-family :$Marvel-Regular;
	font-size:14px;
	letter-spacing:0.8px;
	text-transform:uppercase;
	transition:all 0.25s 0s linear;
	&:hover{
		border:1px solid $skyblue;
		background-color:$white;
		color:$skyblue;
		text-decoration:none!important;
	}
	&:focus{
		text-decoration:none;
	}
}
/*IE10 */
@media all and (-ms-high-contrast: none), (-ms-high-contrast: active) {
	a.cta{
		padding-top:15px;
	}
	a.btn{
		padding-top:15px;
	}



}
