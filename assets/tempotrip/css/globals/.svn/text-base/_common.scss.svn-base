// Classes based on Style Guide//
//Header Styles//
.Header-1{
    font-family:$Marvel-Bold;
    font-size: 40px;
    font-weight: bold;
    line-height: 1.25;
    letter-spacing: 1.2px;
    color: $black;
}
.Header-2{
    font-family:$Marvel-SemiBold;
    font-size: 36px;
    font-weight: bold;
    line-height: 1.17;
    letter-spacing: 0.8px;
    color: $black;
}
.Header-3{
    font-family:$Marvel-Medium;
    font-size: 32px;
    font-weight: 500;
    line-height: 1.25;
    letter-spacing: 0.2px;
    color: $black;
    margin-bottom:0px;

}
.Header-4{
    font-family:$Marvel-Regular;
    font-size: 24px;
    font-weight: bold;
    line-height: 1.25;
    letter-spacing: 0.5px;
    color: $black;

}
.Header-5{
    font-family:$Marvel-Regular;
    font-size: 18px;
    font-weight: 500;
    line-height: 1.56;
    letter-spacing: 0.25px;
    color: $black;
}
//Subhead styles//
.Subhead-1{
    font-family: $Marvel-Light;
    font-size: 24px;
    line-height: 1.0;
    letter-spacing: 1.5px;
    color: $black;
    text-transform: uppercase;
}
.Subhead-2{
    font-family: $Marvel-Light;
    font-size: 18px;
    line-height: 1.67;
    letter-spacing: 1px;
    text-transform: uppercase;
    color: $black;
}
